# i just wanna move windows between displays
# alt + hjkl focus windows
alt - h : yabai -m window --focus west || yabai -m window --focus west
alt - j : yabai -m window --focus south || yabai -m display --focus south
alt - k : yabai -m window --focus north || yabai -m display --focus north
alt - l : yabai -m window --focus east || yabai -m window --focus east

#shift + alt + hjkl moves windows
shift + alt - h : yabai -m window --swap west
shift + alt - j : yabai -m window --display south --focus
shift + alt - k : yabai -m window --display north --focus
shift + alt - l : yabai -m window --swap east

# change window layout
cmd + shift - f : yabai -m config layout stack
cmd + shift - s : yabai -m config layout bsp

# toggle layout horizontal/vertical
shift + alt - t : yabai -m window --toggle split

